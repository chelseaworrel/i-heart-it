<!-- Trigger the modal with a button -->

<!-- Modal -->
 <% @pictures.each do |pic| %>
 <%= link_to image_tag(pic.image_url), "#myModal-#{pic.id}", :data => { :toggle =>"modal", :target => "#myModal-#{pic.id}"} %>
  <!-- <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button> -->
  <% end %>
            <% @pictures.each do |pic| %>
<div id="myModal-<%= pic.id %>" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="layout-profile col-md-12">
              <%= image_tag pic.image_url %>
              <%= link_to "X", picture_path(pic), method: :delete, data: {confirm: "sure you want to delete this photo?!"} %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
