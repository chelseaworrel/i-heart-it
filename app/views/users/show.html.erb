<div class="row top">

<div class="col-md-12 pic"><%= image_tag current_user.image, class: "img-circle", size: "200x200"%></div>
  <div class="name col-md-12"><%= current_user.nickname %>
    <h4>>>>>><<<<<</h4>
</div>


<div class="bio col-md-12">
  <span><h3><%= current_user.user.full_name %></h3> <%= current_user.user.bio %></span><br>
</div>

<div class="col-md-4"></div>
</div>

<div class="row-border col-md-12"></div>

<div class="row">
  <div class="style-show col-md-12">
    <% @pictures.each do |pic| %>
      <%= link_to image_tag(pic.image_url, size: '400x400'), "#myModal-#{pic.id}", :data => { :toggle =>"modal", :target => "#myModal-#{pic.id}"} %>
      <div id="myModal-<%= pic.id %>" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title"><%= image_tag("i-heart-it.jpg", size: "300x200") %></h4>
            </div>
            <div class="modal-body">
              <div class="modal-style">
                <%= image_tag pic.image_url %>
                <%= link_to "x delete x", picture_path(pic), method: :delete, data: {confirm: "sure you want to delete this photo?!"} %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
